#!/bin/bash
echo ""
bin/gn gen out/android-arm64-release --args='is_debug=false ndk="'${ANDROID_NDK_ROOT}'" target_cpu="arm64" is_official_build=false'
echo ""
echo "Build cmd:"
echo "ninja -C out/android-arm64-release"
echo ""
echo "Create App:"
echo "b/android-arm64-release-app HelloWorld"
echo ""
echo "Deploy to device:"
echo "adb install out/android-arm64-release/HelloWorld.apk"
echo ""
