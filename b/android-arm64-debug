#!/bin/bash
echo ""
bin/gn gen out/android-arm64-debug --args='ndk="'${ANDROID_NDK_ROOT}'" target_cpu="arm64"'
echo ""
echo "Build cmd:"
echo "ninja -C out/android-arm64-debug libHelloWorldApp"
echo "ninja -C out/android-arm64-debug libDemoApp"
echo ""
echo "Create App:"
echo "b/android-arm64-debug-app HelloWorldApp"
echo "b/android-arm64-debug-app DemoApp"
echo ""
echo "Deploy to device:"
echo "adb install out/android-arm64-debug/HelloWorldApp.apk"
echo "adb install out/android-arm64-debug/DemoApp.apk"
echo ""
